extends layout

block stylesheets
    link(rel='stylesheet', href='/stylesheets/index.css')

block scripts
    script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js')
    script(src='/javascripts/client-index.js')

block content
    .container-fluid
        .row
            .col-md-9

            .col-md-3
                #chat-box(style='margin-left: auto; margin-right: auto;')
                    ul#chat-content
                .input-group(style='width: 100%;')
                    input.form-control(type='text', id='chat-input' maxlength='256')
                    button.btn.btn-primary#chat-button(type='button', onClick='Chat.messageSend()') :D
